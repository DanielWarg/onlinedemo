# Database
DATABASE_URL=placeholder

# AI Endpoints
LOCAL_AI_ENDPOINT=placeholder
EXTERNAL_AI_ENDPOINT=placeholder

# --- OpenAI (opt-in demo) ---
# Used if you enable:
# - STT_ENGINE=openai (audio transcription)
# - FORTKNOX_PIPELINE=langchain + FORTKNOX_LC_PROVIDER=openai (Fort Knox LangChain endpoint)
OPENAI_API_KEY=
OPENAI_STT_MODEL=whisper-1
OPENAI_STT_LANGUAGE=sv

# Fort Knox via LangChain (opt-in, regressions√§ker)
# Enable the separate endpoint: POST /api/fortknox/compile/langchain
FORTKNOX_PIPELINE=default
FORTKNOX_LC_PROVIDER=local
FORTKNOX_LC_BASE_URL=
FORTKNOX_LC_API_KEY=local
FORTKNOX_LC_MODEL=

# STT provider (default is local)
STT_ENGINE=faster_whisper
WHISPER_MODEL=small

# Demo Mode
DEMO_MODE=true

# Authentication
AUTH_MODE=basic
